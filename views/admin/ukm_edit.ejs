<%- include('templates/admin_header') %>
<%- include('templates/admin_sidebar') %>
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Edit UKM</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-warning">
                Edit UKM
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" action="edit_ukm/<%= id %>">
                        <div class="form-group">
                            <label>Nama UKM</label>
                            <input class="form-control" name="name" id="name" value="<%= name %>">
                        </div>
                        <div class="form-group">
                            <label>Deskripsi</label>
                            <input class="form-control" name="description" id="description" value="<%= description %>">
                        </div>
                        <div class="form-group">
                            <label>Alamat</label>
                            <input class="form-control" name="address" id="address" value="<%= address %>">
                        </div>

                        <button type="submit" class="btn btn-warning">Submit</button>
                        <button type="reset" class="btn btn-dark">Back</button>

                    </form>

                </div>

            </div>
            <!-- /.row -->
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<%- include('templates/admin_footer') %>