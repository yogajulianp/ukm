<%- include('templates/admin_header') %>
    <%- include('templates/admin_sidebar') %>
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Edit Produk</h1>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        Edit Produk
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form 
                            method="post" 
                            action="/admin/edit_products?id=<%=products.id %>" 
                            enctype="multipart/form-data"
                            >
                            <% if (editing) { %>
                                <input type="hidden" name="id" value="<%= products.id %>"/>
                                <% } %>

                                <div class="form-group">
                                    <label>Nama Produk</label>
                                    <input 
                                    type="text"
                                    class="form-control" 
                                    name="name"
                                    id="name"
                                    placeholder="Nama Product"
                                    value="<% if ( editing ||hasError) { %><%= products.name %><% } %>"
                                    >
                                </div>
                                <div class="form-group">
                                    <label>Foto </label>
                                    <br>
                                    <input 
                                    type="file" 
                                    name="image"
                                    id=" image"
                                    accept="image/png, image/jpeg, image/jpg"
                                    >
                                </div>
                                <div class="form-group">
                                    <label>Quantity</label>
                                    <input 
                                    type="number" 
                                    class="form-control" 
                                    name="quantity"
                                    id="quantity"
                                    placeholder="Jumlah Stok Product"
                                    value="<% if ( editing || hasError) { %><%= products.quantity %><% } %>"
                                    >
                                </div>
                                <div class="form-group">
                                    <label>Harga </label>
                                    <input 
                                    type="number"
                                    step="0.01" 
                                    class="form-control" 
                                    name="price"
                                    id="price"
                                    placeholder="Harga Product"
                                    value="<% if ( editing ||hasError) { %><%= products.price %><% } %>"
                                    >
                                </div>
                                <p>
                                    <select name="category_fk" id="" class="form-control">
                                        <option value="">Pilih Kategori</option>
                                        <% for (let item of categories) { %>
                                          <option value="<%=item.id%>"
                                            <%= editing && item.id === products.category_fk ? "selected" : "" %> > <%=item.category%></option>
                                        <% } %>
                                      </select>
                                  </p>
                                <div class="form-group">
                                    <label>Deskripsi</label>
                                    <textarea 
                                    rows="6" 
                                    class="form-control" 
                                    name="description"
                                    id="description"

                                    > 
                                    <% if (editing || hasError) { %><%= products.description %><% } %></textarea
                                    >
                                </div>

                                <button type="submit" class="btn btn-warning">Edit</button>
                                &nbsp;
                                <a href="/admin/products" class="btn btn-dark">Back</a>
                            </form>

                        </div>

                    </div>
                    <!-- /.row -->
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('templates/admin_footer') %>